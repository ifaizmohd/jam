{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "target": "ES6",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@core/*": ["core/*"]
    }
  },
  "moduleResolution": "node",
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
